<div class="mt-5">
    <h3 class="mt-5">Cập nhật Khóa Học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên Khóa Học</label>
            <input value="{{course.name}}" name="name" type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="desc">Mô Tả</label>
            <input value="{{course.desc}}" name="desc" type="text" class="form-control" id="desc">
        </div>
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input value="{{course.videoId}}" name="videoId" type="text" class="form-control" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input value="{{course.level}}" name="level" type="text" class="form-control" id="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>