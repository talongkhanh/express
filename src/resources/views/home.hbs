
<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4 mb-5">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <div class="course-img" style="background-image: url({{{ this.image }}});"></div>
                </a>
                <div class="card-body course-body">
                    <a href="/courses/{{this.slug}}">
                        <h4 class="card-title">{{ this.name }}</h4>
                    </a>
                    <p class="card-text">{{ this.desc }}</p>
                    <button class="btn btn-primary">Mua Khóa Học</button>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
